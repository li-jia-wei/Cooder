<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- 默认主题 -->
	<style name="Theme.Cooder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryVariant">@color/primary_variant</item>
		<item name="colorOnPrimary">@color/white</item>
		<item name="colorSecondary">@color/secondary</item>
		<item name="colorSecondaryVariant">@color/secondary_variant</item>
		<item name="colorOnSecondary">@color/black</item>
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
	</style>

	<!-- 全屏主题 -->
	<style name="Theme.Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowNoTitle">true</item>                  <!-- 窗口没有标题 -->
		<item name="android:windowActionBar">false</item>               <!-- 窗口操作栏 -->
		<item name="android:windowContentOverlay">@null</item>          <!-- 窗口内容覆盖 -->
		<item name="colorPrimaryDark">@color/primary</item>
		<item name="android:textColor">@color/font_default</item>  <!-- 设置字体默认颜色 -->
		<item name="colorAccent">@color/accent</item>
	</style>
</resources>